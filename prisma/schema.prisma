// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Skill {
  id          String   @id
  name        String
  category    String
  level       Int
  icon        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id           String   @id
  title        String
  images       String[] // Array of image URLs
  overview     String   @db.Text
  features     String[] // Array of feature strings
  techStacks   Json     // JSON object with frontend, backend, tools arrays
  challenges   String[] // Array of challenge strings
  futurePlans  String[] // Array of future plan strings
  demoUrl      String?
  githubUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
